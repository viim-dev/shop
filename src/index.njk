{% set title = 'Aware by ViiM' %}
{% extends "landinglayout.njk" %}

{% set aware = collections.featured[0].data %}
{% set glass = collections.featured[1].data %}
{% set holo = collections.featured[2].data %}
{% set ifi = collections.featured[3].data %}
{% set ring = collections.featured[4].data %}
{% set press = collections.featured[5].data %}
{% set coin = collections.featured[6].data %}

{% block body %}
<main>
    
    <section class="max-h-screen overflow-y-scroll snap snap-y snap-mandatory">
      {% include 'header.njk' %}
      <!-- AWARE -->
    
    <div class="bg-cover bg-center h-screen snap-center relative" style="background:url('{{ aware.coverimage }}');background-size: cover;
    background-position: center;">
      <div class="flex flex-col justify-center">
        {# <h1 class="text-[40px] m-auto font-bold text-tesla-dark">
          AWARE
        </h1> #}
        <p class="m-auto pt-1 text-[16px] text-2xl  relative top-16 md:top-32 text-slate-300 p2font">
          {{ aware.headline }}</span>
        </p>
        <p class="m-auto pt-1 text-[16px] text-center relative top-20 md:top-40 text-slate-300 p2font">
          {{ aware.subtitle }}</span>
        </p>
      </div>
      <div class="flex flex-col items-center justify-center mt-[440px] md:mt-[390px] text-[14px] md:flex-row relative bottom-60 md:bottom-20 h-full">
        <a href="{{ aware.linkTo }}" class="btn btn-{{ aware.buttonStyle }}">
          {{ aware.buttonText }}
        </a>
      </div>
      <div class="flex justify-center text-white mt-[10px] absolute bottom-20 w-full">
        <div class="animate-bounce">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
          </svg>
        </div>
      </div>
    </div>
    <div
      class="bg-cover bg-center h-screen snap-center relative" style="background:url('{{ glass.coverimage }}');background-size: cover;
    background-position: center;"
    >
      

      <!-- Visionaire -->

      <div class="flex flex-col justify-center relative top-20">
        <h1 class="text-[40px] m-auto font-bold text-white">{{ glass.headline }}</h1>
        <p class="m-auto pt-1 text-[16px] text-[#5c5d61]">
          {{ glass.subtitle }}</span>
        </p>
      </div>
      <div
        class="flex flex-col items-center justify-center mt-[440px] md:mt-[390px] text-[14px] md:flex-row relative bottom-60 md:bottom-20 h-full"
      >
        <a href="{{ glass.linkTo }}"
          class="btn btn-{{ glass.buttonStyle }}">
          {{ glass.buttonText }}
        </a>
      </div>
      
    </div>
    
    <!-- Press -->
    <div
      class="bg-cover bg-center h-screen snap-center relative" style="background:url('{{ press.coverimage }}');background-size: cover;
    background-position: center;"
    >
      <div class="flex flex-col justify-center pt-24 md:pt-28">
        <h1 class="text-[40px] m-auto font-bold text-white">{{ press.headline }}</h1>
        <p class="m-auto pt-1 text-[16px] text-[#c7cbdd]">
          {{ press.subtitle }}</span>
        </p>
      </div>
      <div
        class="flex flex-col items-center justify-center mt-[440px] md:mt-[390px] text-[14px] md:flex-row relative bottom-60 md:bottom-60 h-full"
      >
        
        <a href="{{ press.linkTo }}"
          class="btn btn-{{ press.buttonStyle }}"
        >
          {{ press.buttonText }}
        </a>
      </div>
    </div>

    <!-- Holoboard -->

    <div
      class="bg-cover bg-center h-screen snap-center relative" style="background:url('{{ holo.coverimage }}');background-size: cover;
    background-position: center;"
    >
      <div class="flex flex-col justify-center pt-28 md:pt-32">
        <h1 class="text-[40px] m-auto font-bold text-white">{{ holo.headline }}</h1>
        <p class="m-auto pt-1 text-[16px] text-white">
          {{ holo.subtitle }}
        </p>
      </div>
      <div
        class="flex flex-col items-center justify-center mt-[440px] md:mt-[390px] text-[14px] md:flex-row relative bottom-60 md:bottom-60 h-full"
      >
        <a href="{{ holo.linkTo }}"
          class="btn btn-{{ holo.buttonStyle }}"
        >
          {{ holo.buttonText }}
        </a>
      </div>
    </div>

    <!-- RIng -->
    <div
      class="bg-cover bg-center h-screen snap-center" style="background:url('{{ ring.coverimage }}');background-size: cover;
    background-position: center;"
    >
      <div class="flex flex-col justify-center pt-16">
        <h1 class="text-[40px] m-auto font-bold text-tesla-dark">{{ ring.headline }}</h1>
        <p class="m-auto pt-1 text-[16px] text-slate-800">
          {{ ring.subtitle }}
        </p>
      </div>
      <div
        class="flex flex-col items-center justify-center mt-[440px] md:mt-[390px] text-[14px] md:flex-row relative bottom-60 md:bottom-60 h-full"
      >
        <a href="{{ ring.linkTo }}"
          class="btn btn-{{ ring.buttonStyle }}"
        >
          {{ ring.buttonText }}
        </a>
        
      </div>
    </div>

    <!-- Coin -->

    <div
      class="bg-cover bg-center h-screen snap-center" style="background:url('{{ coin.coverimage }}');background-size: cover;
    background-position: center;"
    >
      <div class="flex flex-col justify-center pt-28">
        <h1 class="text-[40px] m-auto font-bold text-slate-200">
          {{ coin.headline }}
        </h1>
        <p class="m-auto pt-1 text-[16px] text-[#a4a5a8]">
          {{ coin.subtitle }}
        </p>
      </div>
      <div
        class="flex flex-col items-center justify-center mt-[440px] md:mt-[390px] text-[14px] md:flex-row relative bottom-60 md:bottom-60 h-full"
      >
        
        <a href="{{ coin.linkTo }}"
          class="btn btn-{{ coin.buttonStyle }}"
        >
          {{ coin.buttonText }}
        </a>
      </div>
    </div>

    <!-- ifi -->

    <div
      class="bg-cover bg-center h-screen snap-center" style="background:url('{{ ifi.coverimage }}');background-size: cover;
    background-position: center;"
    >
      <div class="flex flex-col justify-center pt-24">
        <h1 class="text-[40px] m-auto font-bold text-white">{{ ifi.headline }}</h1>
        <p class="m-auto pt-1 text-[16px] text-[#a4a5aa]">
          {{ ifi.subtitle }}
        </p>
      </div>
      <div
        class="flex flex-col items-center justify-center mt-[440px] md:mt-[390px] text-[14px] md:flex-row relative bottom-60 md:bottom-60 h-full"
      >
        
        <a href="{{ ifi.linkTo }}"
          class="btn btn-{{ ifi.buttonStyle }}"
        >
          {{ ifi.buttonText }}
        </a>
      </div>
    </div>

    
    <div class="flex justify-center pb-5 relative -top-24">
      <div class="grow">
        <ul
          class="flex flex-col md:flex-row items-center justify-center text-slate-200 text-[12px]"
        >
          <li class="mx-5">ViiM &copy 2022</li>
          <li class="mx-5">Privacy & Legal</li>
          <li class="mx-5">Contact</li>
          <li class="mx-5">Shop</li>
          <li class="mx-5">About</li>
        </ul>
      </div>
    </div>
    </section>
    </main>
{% endblock %}
