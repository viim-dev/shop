{% set title = 'Aware by ViiM' %}
{% extends "landinglayout.njk" %}

{% set aware = collections.featured[0].data %}
{% set glass = collections.featured[1].data %}
{% set holo = collections.featured[3].data %}
{% set ifi = collections.featured[6].data %}
{% set ring = collections.featured[4].data %}
{% set press = collections.featured[2].data %}
{% set coin = collections.featured[5].data %}

{% block body %}
<main>
    
    <section class="max-h-screen overflow-y-scroll snap snap-y snap-mandatory">
      {% include 'header.njk' %}
      <!-- AWARE -->
    
    <div class="bg-cover bg-center h-screen snap-center relative" style="background:url('{{ aware.coverimage }}');background-size: cover;
    background-position: center;">
      <div class="flex flex-col justify-center">
        {# <h1 class="text-[40px] m-auto font-bold text-tesla-dark">
          AWARE
        </h1> #}
        <h2 class="m-auto pt-1 text-3xl font-bold relative top-12 md:top-16 text-slate-600 p2font">
          {{ aware.headline }}</span>
        </h2>
        <p class="m-auto pt-1 text-[16px] text-center relative top-14 md:top-20 text-slate-600">
          {{ aware.subtitle }}</span>
        </p>
      </div>
      <div class="flex flex-col items-center justify-center mt-[430px] md:mt-[390px] text-[14px] md:flex-row relative bottom-72 md:bottom-48 h-full">
        <a href="{{ aware.linkTo }}" class="btn btn-wide rounded btn-{{ aware.buttonStyle }}">
          {{ aware.buttonText }}
        </a>
      </div>
      <div class="flex justify-center text-black mt-[10px] absolute bottom-12 w-full">
        <div class="animate-bounce">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
          </svg>
        </div>
      </div>
    </div>
    <div
      class="bg-cover bg-center h-screen snap-center relative" style="background:url('{{ glass.coverimage }}');background-size: cover;
    background-position: center;"
    >
      

      <!-- Visionaire -->

      <div class="flex flex-col justify-center relative top-20 md:top-2">
        <h1 class="text-[40px] m-auto font-bold text-white">{{ glass.headline }}</h1>
        <p class="m-auto pt-1 text-[16px] text-[#5c5d61]">
          {{ glass.subtitle }}</span>
        </p>
      </div>
      <div
        class="flex flex-col items-center justify-center mt-[440px] md:mt-[390px] text-[14px] md:flex-row relative bottom-72 md:bottom-48 h-full"
      >
        <a href="{{ glass.linkTo }}"
          class="btn btn-wide rounded btn-{{ glass.buttonStyle }}">
          {{ glass.buttonText }}
        </a>
      </div>
      
    </div>
    
    <!-- Press -->
    <div
      class="bg-cover bg-center h-screen snap-center relative" style="background:url('{{ press.coverimage }}');background-size: cover;
    background-position: center;"
    >
      <div class="flex flex-col justify-center relative top-20">
        <h1 class="text-[40px] m-auto font-bold text-white">{{ press.headline }}</h1>
        <p class="m-auto pt-1 text-[16px] text-slate-600">
          {{ press.subtitle }}</span>
        </p>
      </div>
      <div
        class="flex flex-col items-center justify-center mt-[440px] md:mt-[390px] text-[14px] md:flex-row relative bottom-72 md:bottom-60 h-full"
      >
        
        <a href="{{ press.linkTo }}"
          class="btn btn-wide rounded btn-{{ press.buttonStyle }}"
        >
          {{ press.buttonText }}
        </a>
      </div>
    </div>

    <!-- Holoboard -->

    <div
      class="bg-cover bg-center h-screen snap-center relative" style="background:url('{{ holo.coverimage }}');background-size: cover;
    background-position: center;"
    >
      <div class="flex flex-col justify-center relative top-20">
        <h1 class="text-[40px] m-auto font-bold text-white">{{ holo.headline }}</h1>
        <p class="m-auto pt-1 text-[16px] text-slate-600">
          {{ holo.subtitle }}
        </p>
      </div>
      <div
        class="flex flex-col items-center justify-center mt-[440px] md:mt-[390px] text-[14px] md:flex-row relative bottom-60 md:bottom-60 h-full"
      >
        <a href="{{ holo.linkTo }}"
          class="btn btn-wide rounded btn-{{ holo.buttonStyle }}"
        >
          {{ holo.buttonText }}
        </a>
      </div>
    </div>

    <!-- RIng -->
    <div
      class="bg-cover bg-center h-screen snap-center" style="background:url('{{ ring.coverimage }}');background-size: cover;
    background-position: center;"
    >
      <div class="flex flex-col justify-center relative top-20">
        <h1 class="text-[40px] m-auto font-bold text-white">{{ ring.headline }}</h1>
        <p class="m-auto pt-1 text-[16px] text-slate-800">
          {{ ring.subtitle }}
        </p>
      </div>
      <div
        class="flex flex-col items-center justify-center mt-[440px] md:mt-[390px] text-[14px] md:flex-row relative bottom-72 md:bottom-60 h-full"
      >
        <a href="{{ ring.linkTo }}"
          class="btn btn-wide rounded btn-{{ ring.buttonStyle }}"
        >
          {{ ring.buttonText }}
        </a>
        
      </div>
    </div>

    <!-- Coin -->

    <div
      class="bg-cover bg-center h-screen snap-center" style="background:url('{{ coin.coverimage }}');background-size: cover;
    background-position: center;"
    >
      <div class="flex flex-col justify-center relative top-20">
        <h1 class="text-[40px] m-auto font-bold text-white">
          {{ coin.headline }}
        </h1>
        <p class="m-auto pt-1 text-[16px] text-slate-500">
          {{ coin.subtitle }}
        </p>
      </div>
      <div
        class="flex flex-col items-center justify-center mt-[440px] md:mt-[390px] text-[14px] md:flex-row relative bottom-72 md:bottom-60 h-full"
      >
        
        <a href="{{ coin.linkTo }}"
          class="btn btn-wide rounded btn-{{ coin.buttonStyle }}"
        >
          {{ coin.buttonText }}
        </a>
      </div>
    </div>

    <!-- ifi -->

    <div
      class="bg-cover bg-center h-screen snap-center" style="background:url('{{ ifi.coverimage }}');background-size: cover;
    background-position: center;"
    >
      <div class="flex flex-col justify-center relative top-20">
        <h1 class="text-[40px] m-auto font-bold text-white">{{ ifi.headline }}</h1>
        <p class="m-auto pt-1 text-[16px] text-slate-600">
          {{ ifi.subtitle }}
        </p>
      </div>
      <div
        class="flex flex-col items-center justify-center mt-[440px] md:mt-[390px] text-[14px] md:flex-row relative bottom-96 md:bottom-80 h-full"
      >
        
        <a href="{{ ifi.linkTo }}"
          class="btn btn-wide rounded btn-{{ ifi.buttonStyle }}"
        >
          {{ ifi.buttonText }}
        </a>
      </div>
    </div>

    
    <div class="flex justify-center pb-5 relative -top-24">
      <div class="grow">
        <ul
          class="flex flex-col md:flex-row items-center justify-center text-slate-200 text-[12px]"
        >
          <li class="mx-5">ViiM &copy 2022</li>
          <li class="mx-5">Privacy & Legal</li>
          <li class="mx-5">Contact</li>
          <li class="mx-5">Shop</li>
          <li class="mx-5">About</li>
        </ul>
      </div>
    </div>
    </section>
    </main>
{% endblock %}
